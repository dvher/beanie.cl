<!DOCTYPE html>

<%- include("AdminHeader.ejs") %>

  <body>
    <h1 class="title">Listado de Productos </h1>

    <!--MODAL-->
    <button type="button" class="btn btn-light" data-toggle="modal" data-target="#exampleModal"
      data-whatever="@mdo">Agregar producto</button>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Agregar Producto</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form method="POST" role="form" action="/insert">
              <div class="form-group">
                <label for="recipient-name" class="col-form-label">Nombre</label>
                <input type="text" name="nombre" class="form-control" id="recipient-name">
              </div>
              <div class="form-group">
                <label for="recipient-name" class="col-form-label">Precio</label>
                <input type="text" name="precio" class="form-control" id="recipient-name">
              </div>
              <div class="form-group">
                <label for="recipient-name" class="col-form-label">Cantidad</label>
                <input type="text" name="stock" class="form-control" id="recipient-name">
              </div>
              <div class="form-group">
                <label for="recipient-name" class="col-form-label">descuento</label>
                <input type="text" name="descuento" class="form-control" id="recipient-name">
              </div>
              <div class="form-group">
                <label for="recipient-name" class="col-form-label">Link de imagen</label>
                <input type="text" name="link" class="form-control" id="recipient-name">
              </div>
              <div class="form-group">
                <label for="message-text" class="col-form-label">Descripcion</label>
                <textarea class="form-control" name="descripcion" id="message-text"></textarea>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Send message</button>
          </div>
        </div>
      </div>
    </div>
    <!--Tabla-->
    <div class="container-lg">
      <table class="table table-striped table-bordered" id="sortTable">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Cantidad</th>
            <th scope="col">Precio</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < products.length; i++) { %>
            <tr>
              <td>
                <%= products[i].idProducto %>
              </td>
              <td>
                <p>
                  <%= products[i].nombre %>
                </p>
              </td>
              <td>
                <%= products[i].stock %>
              </td>
              <td>$<%= products[i].precio %>
              </td>
              <td><a href="/delete/<%=products[i].idProducto %>" class="btn btn-outline-danger">ELIMINAR</a>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal"
                  data-bs-target="#exampleModal">
                  Modificar
                </button>
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                  aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Ventana de edicion</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body">
                        <form method="POST" name="myform" role="form" action="/update">
                          <input name="id" type="hidden" value="<%= products[i].idProducto %>">
                          <div class="mb-3">
                            <label for="recipient-name" class="col-form-label">Stock</label>
                            <input type="number" class="form-control" id="stock" name="stock"
                              value="<%= products[i].stock %>">
                          </div>
                          <div class="mb-3">
                            <label for="recipient-name" class="col-form-label">Precio</label>
                            <input type="number" class="form-control" id="precio" name="precio"
                              value="<%= products[i].precio %>">
                          </div>
                          <div class="mb-3">
                            <label for="message-text" class="col-form-label">Descripcion</label>
                            <textarea class="form-control" id="descripcion" name="descripcion" type="text"
                              value="<%= products[i].descripcion %>"></textarea>
                          </div>
                          <button type="submit" class="btn btn-primary">Guardar</button>

                        </form>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                      </div>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
            <% } %>
        </tbody>
      </table>
    </div>

    <!--JS-->
    <script>
      var stockinput = document.getElementById('stock');
      var precioinput = document.getElementById('precio');
      var descripcioninput = document.getElementById('descripcion');

      if (stockinput.value.length == 0 || precioinput.value.length == 0 || descripcioninput.value.length == 0)
        stockinput.value = document.getElementById('stock').value;
      precioinput.value = document.getElementById('precio').value;
      descripcioninput.value = document.getElementById('descripcion').value;

      $('#sortTable').DataTable();
    </script>
  </body>

  </html>